<%= render partial: 'articles/nav' %>

<div class="d-flex flex-column m-auto w-50">
  <h1 class="border-bottom pb-4">
    <%= @article.title %>
    <%= link_to "", edit_article_path(@article), class: "fa-solid fa-pencil text-decoration-none fs-5" %>
    <%= link_to "", article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"fa-solid fa-trash-can text-decoration-none fs-5" %>
  </h1>
  <p class="mt-3">
    <%= @article.content%>
  </p>

</div>
