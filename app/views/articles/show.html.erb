<div class="d-flex justify-content-between .bg-light mb-4 border-bottom align-items-center">
  <h4><%= link_to "My articles", articles_path, class:"text-decoration-none text-secondary" %></h4>
  <h2><%= link_to "New article", new_article_path,class: "btn btn-inverse text-secondary" %></h2>
</div>

<div class="d-flex flex-column m-auto w-50">
  <h1 class="border-bottom pb-4">
    <%= @article.title %>
    <%= link_to "", edit_article_path(@article), class: "fa-solid fa-pencil text-decoration-none fs-5" %>
    <%= link_to "", article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"fa-solid fa-trash-can text-decoration-none fs-5" %>
  </h1>
  <p class="mt-3">
    <%= @article.content%>
  </p>

</div>
