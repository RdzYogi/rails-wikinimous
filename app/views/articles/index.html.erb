
<div class="d-flex justify-content-between .bg-light mb-4 border-bottom align-items-center">
  <h4><%= link_to "My articles", articles_path, class:"text-decoration-none text-secondary" %></h4>
  <h2><%= link_to "New article", new_article_path,class: "btn btn-inverse text-secondary" %></h2>
</div>

<div class="d-flex flex-column m-auto w-50">
  <% @articles.each do |article| %>
    <div class="mb-3">
      <h2><%= link_to article.title, article_path(article), class: "text-decoration-none", style: "color: #337ab7;" %></h2>
      <p><%= article.content %></p>


    </div>
  <% end %>
</div>
